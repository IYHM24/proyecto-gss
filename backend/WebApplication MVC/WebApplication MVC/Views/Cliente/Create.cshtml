@model WebApplication_MVC.Models.Cliente
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div>
        <h3>
            Agregar nuevo cliente
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-sm-10">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input type="text" aasp-for="nombre" class="form-control"/>
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cedula" class="control-label"></label>
                <input type="text" aasp-for="cedula" class="form-control"/>
                <span asp-validation-for="cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="telefono1" class="control-label"></label>
                <input type="text" aasp-for="telefono1" class="form-control"/>
                <span asp-validation-for="telefono1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="telefono2" class="control-label"></label>
                <input type="text" aasp-for="telefono2" class="form-control"/>
                <span asp-validation-for="telefono2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Añadir Cliente" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

